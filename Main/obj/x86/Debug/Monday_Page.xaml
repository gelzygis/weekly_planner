<Page
    x:Class="Main.Monday_Page"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Main"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    xmlns:controls="using:Microsoft.UI.Xaml.Controls"
    >

    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="Assets/Images/dark_forest.jpg" 
                        Stretch="None"
                        />
        </Grid.Background>

        <!-- Day completion bar -->
        <Grid Margin="0,-850,0,0"
              Height="120"
              Width="900"
              >
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <TextBlock Text="Day completion progress" 
                       HorizontalAlignment="Center" 
                       FontFamily="Libre Baskerville" 
                       FontSize="28"                 
                       Height="35"
                       FocusVisualPrimaryBrush="#FFF6F0EA" 
                       Width="Auto" 
                       FontWeight="Bold" 
                       Grid.Row="0"
                       Margin="0,10,0,0"
                       />
            <ProgressBar x:ConnectionId='18' Height="35"
                         Value="1"
                         x:Name="_day_progressbar"
                         Width="900"
                         Margin="0,10,0,0"
                         CornerRadius="5"
                         Grid.Row="1"
                         />
        </Grid>

        <!-- Tasks that must be completed per day -->
        <TextBlock Text="Tasks that must be completed" 
                   HorizontalAlignment="Center" 
                   FontFamily="Libre Baskerville" 
                   FontSize="28"                 
                   Height="35" 
                   Margin="0,-600,0,0" 
                   FocusVisualPrimaryBrush="#FFF6F0EA" 
                   Width="Auto"
                   FontWeight="Bold"
                       />
        <Grid Width="900"
              Height="150"
              Margin="0,-380,0,0"
              Background="#994A5459"
              CornerRadius="5"
              >
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <TextBlock Text="How many pages have I read today?" 
                       HorizontalAlignment="Left" 
                       FontFamily="Libre Baskerville" 
                       FontSize="24"                 
                       Height="35" 
                       FocusVisualPrimaryBrush="#FFF6F0EA" 
                       Width="Auto"
                       Margin="10,0,0,0"
                       Grid.Column="0"
                       Grid.Row="0"
                       />
            <TextBlock Text="How many new nouns I learned?" 
                       HorizontalAlignment="Left" 
                       FontFamily="Libre Baskerville" 
                       FontSize="24"                 
                       Height="35" 
                       FocusVisualPrimaryBrush="#FFF6F0EA" 
                       Width="Auto"
                       Margin="10,0,0,0"
                       Grid.Column="0"
                       Grid.Row="1"
                       />
            <TextBlock Text="Have I exercised today?" 
                       HorizontalAlignment="Left" 
                       FontFamily="Libre Baskerville" 
                       FontSize="24"                 
                       Height="35" 
                       FocusVisualPrimaryBrush="#FFF6F0EA" 
                       Width="Auto"
                       Margin="10,0,0,0"
                       Grid.Column="0"
                       Grid.Row="2"
                       />
            <controls:NumberBox x:ConnectionId='15' x:Name="read_pages_nr_box"
                                SpinButtonPlacementMode="Inline"
                                                                             
                                SmallChange="1"
                                LargeChange="10"
                                FontSize="24"
                                FontFamily="Libre Baskerville"
                                Width="250" 
                                Height="40"
                                Grid.Column="1"
                                Grid.Row="0"
                                Margin="0,0,-160,0"
                                PlaceholderText="Ex. 15"
                                Maximum="50"
                                />
            <controls:NumberBox x:ConnectionId='16' x:Name="nouns_learned_nr_box"
                                SpinButtonPlacementMode="Inline"
                                                                                
                                SmallChange="1"
                                LargeChange="10"
                                Grid.Column="1"
                                Grid.Row="1"
                                Width="250" 
                                Height="40"
                                FontSize="24" 
                                FontFamily="Libre Baskerville"
                                Margin="0,0,-160,0"
                                PlaceholderText="Ex. 10"
                                Maximum="50"
                                />

            <CheckBox x:ConnectionId='17' x:Name="exercise_check_box"
                                                          
                                                              
                      Content="Yes, I have exercised"
                      FontFamily="Libre Baskerville"
                      Grid.Row="2"
                      Grid.Column="1"
                      FontSize="20" 
                      Margin="185,0,0,0"
                      ElementSoundMode="Default"
                      />

        </Grid>

        <!-- Optional tasks addition -->
        <TextBlock Text="Optional tasks" 
                       HorizontalAlignment="Center" 
                       VerticalAlignment="Center"
                       FontFamily="Libre Baskerville" 
                       FontSize="28"                 
                       Height="35" 
                       FocusVisualPrimaryBrush="#FFF6F0EA" 
                       Width="Auto"
                       FontWeight="Bold"
                       Grid.Row="0"
                   Margin="0,-100,0,0"
                   />
        <Grid Height="300"
              Width="900"
              Margin="0,275,0,0"
              Background="#994A5459"
              CornerRadius="5"
              >
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Viewbox Height="40"
                     Grid.Row="0"
                     HorizontalAlignment="Left"
                     Margin="27,0,0,0" FocusVisualPrimaryBrush="Black"
                     >
                <CheckBox x:ConnectionId='14' x:Name="Chkbox_row_0"
                          IsEnabled="False"
                                                        
                                                            
                          FocusVisualPrimaryBrush="White"
                          />
            </Viewbox>
            <TextBox x:ConnectionId='5' x:Name="Txtbox_row_0"
                                                                     
                     Grid.Row="0"
                     Height="40"
                     CornerRadius="5"
                     Margin="80,0,10,0"
                     PlaceholderText="Task description"
                     FontSize="20"
                     FontFamily="Libre Baskerville"
                />
            <Viewbox Height="40"
                     Grid.Row="1"
                     HorizontalAlignment="Left"
                     Margin="27,0,0,0" FocusVisualPrimaryBrush="Black"
                     >
                <CheckBox x:ConnectionId='13' x:Name="Chkbox_row_1"
                          IsEnabled="False"
                                                        
                                                            
                          FocusVisualPrimaryBrush="White"
                          />
            </Viewbox>
            <TextBox x:ConnectionId='6' x:Name="Txtbox_row_1"
                                                                     
                     Grid.Row="1"
                     Height="40"
                     CornerRadius="5"
                     Margin="80,0,10,0"
                     PlaceholderText="Task description"
                     FontSize="20"
                     FontFamily="Libre Baskerville"
                />
            <Viewbox Height="40"
                     Grid.Row="2"
                     HorizontalAlignment="Left"
                     Margin="27,0,0,0" FocusVisualPrimaryBrush="Black"
                     >
                <CheckBox x:ConnectionId='12' x:Name="Chkbox_row_2"
                          IsEnabled="False"
                                                        
                                                            
                          FocusVisualPrimaryBrush="White"
                          />
            </Viewbox>
            <TextBox x:ConnectionId='7' x:Name="Txtbox_row_2"
                                                                     
                     Grid.Row="2"
                     Height="40"
                     CornerRadius="5"
                     Margin="80,0,10,0"
                     PlaceholderText="Task description"
                     FontSize="20"
                     FontFamily="Libre Baskerville"
                />
            <Viewbox Height="40"
                     Grid.Row="3"
                     HorizontalAlignment="Left"
                     Margin="27,0,0,0" FocusVisualPrimaryBrush="Black"
                     >
                <CheckBox x:ConnectionId='11' x:Name="Chkbox_row_3"
                          IsEnabled="False"
                                                        
                                                            
                          FocusVisualPrimaryBrush="White"
                          />
            </Viewbox>
            <TextBox x:ConnectionId='8' x:Name="Txtbox_row_3"
                                                                     
                     Grid.Row="3"
                     Height="40"
                     CornerRadius="5"
                     Margin="80,0,10,0"
                     PlaceholderText="Task description"
                     FontSize="20"
                     FontFamily="Libre Baskerville"
                />
            <Viewbox Height="40"
                     Grid.Row="4"
                     HorizontalAlignment="Left"
                     Margin="27,0,0,0" FocusVisualPrimaryBrush="Black"
                     >
                <CheckBox x:ConnectionId='10' x:Name="Chkbox_row_4"
                          IsEnabled="False"
                                                        
                                                            
                          FocusVisualPrimaryBrush="White"
                          />
            </Viewbox>
            <TextBox x:ConnectionId='9' x:Name="Txtbox_row_4"
                                                                     
                     Grid.Row="4"
                     Height="40"
                     CornerRadius="5"
                     Margin="80,0,10,0"
                     PlaceholderText="Task description"
                     FontSize="20"
                     FontFamily="Libre Baskerville"
                />
        </Grid>
        <TextBlock Text="Money tracking" 
                   HorizontalAlignment="Center" 
                   VerticalAlignment="Center"
                   FontFamily="Libre Baskerville" 
                   FontSize="28"                 
                   Height="35" 
                   FocusVisualPrimaryBrush="#FFF6F0EA" 
                   Width="Auto"
                   FontWeight="Bold"
                   Grid.Row="0"
                   Margin="0,650,0,0"
                   />
        <Grid Background="#994A5459"
              CornerRadius="5"
              Width="900"
              Height="60"
              Margin="0,750,0,0"
              >
            <Grid.RowDefinitions>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <TextBlock Text="How much money was spent on food today?" 
                       HorizontalAlignment="Left" 
                       FontFamily="Libre Baskerville" 
                       FontSize="24"                 
                       Height="35" 
                       FocusVisualPrimaryBrush="#FFF6F0EA" 
                       Width="Auto"
                       Margin="10,0,0,0"
                       Grid.Column="0"
                       Grid.Row="0"
                       />
            <controls:NumberBox x:ConnectionId='4' x:Name="money_track"
                                SpinButtonPlacementMode="Inline"
                                SmallChange="1"
                                LargeChange="10" 
                                FontSize="24" 
                                FontFamily="Libre Baskerville"
                                Width="250" 
                                Height="40"
                                Grid.Row="0"
                                Margin="0,0,-600,0"
                                PlaceholderText="Eur"
                                Maximum="50"
                                />
        </Grid>
        <Grid Height="60"
              Width="400"
              Margin="0,915,0,0"
              Background="#994A5459"
              CornerRadius="5"
              >
            <Grid.RowDefinitions>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <TextBlock Text="Finished your day?"
                       FontFamily="Libre Baskerville" 
                       VerticalAlignment="Center"
                       HorizontalAlignment="Left"
                       FontSize="20"
                       Margin="10,0,0,0"
                       />
            <Button Content="Save data"
                    FontFamily="Libre Baskerville"
                    Height="40"
                    Width="150"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Right"
                    Grid.Row="1"
                    Margin="0,0,10,0"
                    />
        </Grid>
        
        <!-- Refresh button "Tasks that must be completed" -->
        <Grid Height="40"
              Width="80"
              Margin="-550,-600,0,0"
              >
            <Button x:ConnectionId='3' Content="Refresh"
                    FontFamily="Libre Baskerville"
                    x:Name="refresh_button_1"
                                                  
                    HorizontalAlignment="Center"
                    Width="80"
                    />
        </Grid>
        
        <!-- Refresh button "Optional tasks" -->
        <Grid Height="40"
              Width="80"
              Margin="-325,-100,0,0"
              >
            <Button x:ConnectionId='2' Content="Refresh"
                    FontFamily="Libre Baskerville"
                                                  
                    x:Name="refresh_button_2"
                    HorizontalAlignment="Center"
                    Width="80"
                    />
        </Grid>
    </Grid>
</Page>

